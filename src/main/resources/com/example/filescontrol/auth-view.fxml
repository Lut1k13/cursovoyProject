<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.filescontrol.AuthController">
   <children>
      <HBox>
         <children>
            <VBox>
               <children>
                  <Label text="Пользователь" />
                  <TextField fx:id="nameField" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Пароль" />
                  <PasswordField fx:id="passField" />
               </children>
            </VBox>
         </children>
      </HBox>
      <ToolBar>
        <items>
          <Button mnemonicParsing="false" onAction="#login" text="Вход" />
            <Button mnemonicParsing="false" onAction="#register" text="Регистрация" />
        </items>
      </ToolBar>
   </children>
</VBox>
